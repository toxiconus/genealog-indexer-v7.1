                    <div class="postprocess-value" id="adaptiveThresholdValue">OFF</div>
                </div>
                
                <div class="postprocess-slider">
                    <label>Gaussian Blur (denoise)</label>
                    <input type="range" id="gaussianBlurSlider" min="0" max="10" value="0" step="1">
