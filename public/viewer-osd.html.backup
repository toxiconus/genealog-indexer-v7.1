        // ROI SETUP
        function setupROI() {
            app.roiCanvas = document.getElementById('roiCanvas');
            if (!app.roiCanvas) {
                console.error('ROI Canvas element not found');
                return;
            }
            
            app.roiCtx = app.roiCanvas.getContext('2d', { willReadFrequently: true });

            const container = document.querySelector('.viewer-container');
            if (!container) {
                console.error('Viewer container not found');
                return;
            }
            
            const resize = () => {
                app.roiCanvas.width = container.offsetWidth;
                app.roiCanvas.height = container.offsetHeight;
                redrawROIs();
            };

            resize();
            window.addEventListener('resize', resize);

            console.log('‚úÖ ROI Setup complete:', {
                canvas: app.roiCanvas,
                context: app.roiCtx,
                width: app.roiCanvas.width,
                height: app.roiCanvas.height
            });

            app.roiCanvas.addEventListener('mousedown', (e) => {
                console.log('üñ±Ô∏è Mouse down on canvas:', {
                    roiMode: app.roiMode,
                    hasRecord: !!app.currentRecordId,
                    hasField: !!app.activeField,
                    x: e.offsetX,
                    y: e.offsetY
                });
                
                if (!app.roiMode) {
                    console.warn('ROI mode disabled');
                    return;
                }
                
                if (!app.currentRecordId) {
                    notify('‚ùå Utw√≥rz rekord najpierw', 'error');
                    return;
                }
                
                if (!app.activeField) {
                    notify('‚ùå Zaznacz pole w formularzu (kliknij w input)', 'error');
                    return;
                }
                
                // Je≈õli zdarzenie pochodzi z wnƒôtrza canvas (rysowanie ROI)
                // to zablokuj propagacjƒô aby nie wyzwoliƒá pan/zoom
                e.stopPropagation();
                
                app.drawingROI = true;
                app.roiStartX = e.offsetX;
                app.roiStartY = e.offsetY;
            });

            app.roiCanvas.addEventListener('mousemove', (e) => {
                if (!app.drawingROI) return;
                
                e.stopPropagation();

                app.roiCtx.clearRect(0, 0, app.roiCanvas.width, app.roiCanvas.height);
                redrawROIs();

                const w = e.offsetX - app.roiStartX;
                const h = e.offsetY - app.roiStartY;

                app.roiCtx.strokeStyle = '#0078d4';
                app.roiCtx.lineWidth = 2;
                app.roiCtx.setLineDash([5, 5]);
                app.roiCtx.strokeRect(app.roiStartX, app.roiStartY, w, h);
                app.roiCtx.fillStyle = 'rgba(0,120,212,0.15)';
                app.roiCtx.fillRect(app.roiStartX, app.roiStartY, w, h);
                app.roiCtx.setLineDash([]);
            });

            app.roiCanvas.addEventListener('mouseup', (e) => {
                if (!app.drawingROI) return;

                e.stopPropagation();

                app.drawingROI = false;

                const w = e.offsetX - app.roiStartX;
                const h = e.offsetY - app.roiStartY;

                console.log('üñ±Ô∏è Mouse up - ROI size:', { w, h, minSize: 10 });

                if (Math.abs(w) < 10 || Math.abs(h) < 10) {
                    console.log('‚ö†Ô∏è ROI too small, cancelled');
                    redrawROIs();
                    return;
                }

                // Konwersja wsp√≥≈Çrzƒôdnych ekranu ‚Üí obraz
                const roi = screenToImageRect(
                    app.roiStartX,
                    app.roiStartY,
                    w,
                    h
                );

                if (!roi) {
                    notify('‚ùå B≈ÇƒÖd ROI - obraz nie za≈Çadowany', 'error');
                    redrawROIs();
                    return;
                }

                if (!app.currentRecordId) {
                    notify('‚ùå Utw√≥rz rekord przed ROI', 'error');
                    redrawROIs();
                    return;
                }

                const record = app.records.find(r => r.id === app.currentRecordId);
                if (!record.rois) record.rois = {};

                const fieldId = app.activeField.dataset.field;
                record.rois[fieldId] = roi;

                app.activeField.classList.add('has-roi');

                const label = app.activeField.previousElementSibling?.textContent || fieldId;
                notify(`‚úÖ ROI zapisany dla: ${label}`, 'success');
                saveStorage();
                
                // Wymu≈õ redraw po kr√≥tkim op√≥≈∫nieniu
                setTimeout(() => {
                    redrawROIs();
                }, 50);
            });
        }

        // REDRAW ROIs
        function redrawROIs(highlightField = null) {
            if (!app.roiCtx || !app.roiCanvas) {
                console.warn('ROI Canvas not initialized');
                return;
            }
            
            app.roiCtx.clearRect(0, 0, app.roiCanvas.width, app.roiCanvas.height);

            const viewer = app.viewer;
            const item = viewer.world.getItemAt(0);
            if (!item) {
                console.warn('No image loaded');
                return;
            }

            const size = item.getContentSize();
            const currentImageRecords = app.records.filter(r => r.imageIdx === app.currentImageIdx);

            let roiCount = 0;
            currentImageRecords.forEach(record => {
                if (!record.rois) return;

                Object.entries(record.rois).forEach(([fieldId, roi]) => {
                    // Je≈õli highlight, rysuj tylko wybrane pole z bie≈ºƒÖcego rekordu
                    if (highlightField && (fieldId !== highlightField || record.id !== app.currentRecordId)) return;

                    try {
                        // Konwersja ROI z wsp√≥≈Çrzƒôdnych obrazu ‚Üí viewport ‚Üí ekran
                        const imgRect = new OpenSeadragon.Rect(
                            roi.x * size.x,
                            roi.y * size.y,
                            roi.w * size.x,
                            roi.h * size.y
                        );

                        const viewportRect = viewer.viewport.imageToViewportRectangle(imgRect);
                        
                        // Konwersja viewport ‚Üí pikselami ekranu
                        const topLeft = viewer.viewport.pixelFromPoint(viewportRect.getTopLeft());
                        const bottomRight = viewer.viewport.pixelFromPoint(viewportRect.getBottomRight());

                        const x = topLeft.x;
                        const y = topLeft.y;
                        const w = bottomRight.x - topLeft.x;
                        const h = bottomRight.y - topLeft.y;

                        // Pomi≈Ñ je≈õli poza ekranem
                        if (w < 1 || h < 1) return;

                        const isCurrent = record.id === app.currentRecordId;
                        const isActive = isCurrent && app.activeField && app.activeField.dataset.field === fieldId;
                        const isHighlight = fieldId === highlightField;

                        const color = isActive ? '#ff9800' : (isHighlight ? '#ffb300' : (isCurrent ? '#0078d4' : '#107c10'));

                        app.roiCtx.strokeStyle = color;
                        app.roiCtx.lineWidth = isActive ? 4 : (isHighlight ? 3 : 2);
                        app.roiCtx.strokeRect(x, y, w, h);

                        app.roiCtx.fillStyle = color + '22';
                        app.roiCtx.fillRect(x, y, w, h);

                        app.roiCtx.fillStyle = color;
                        app.roiCtx.font = 'bold 11px sans-serif';
                        app.roiCtx.fillText(fieldId.substring(0,10), x + 6, y + 16);
                        roiCount++;
                    } catch (err) {
                        console.warn(`ROI redraw error for ${fieldId}:`, err);
                    }
                });
            });
            
            if (roiCount > 0) {
                console.log(`üé® redrawROIs: narysowano ${roiCount} ROI`);
            }
        }

        // SCREEN TO IMAGE COORDINATES CONVERSION
        function screenToImageRect(x, y, w, h) {
            const viewer = app.viewer;
            if (!viewer) {
                console.error('Viewer not initialized');
                return null;
            }

            const item = viewer.world.getItemAt(0);
            if (!item) {
                console.error('No image loaded in viewer');
                return null;
            }

            try {
                // Konwersja pikseli ekranu ‚Üí viewport ‚Üí obraz
                const p1 = viewer.viewport.pointFromPixel(new OpenSeadragon.Point(x, y));
                const p2 = viewer.viewport.pointFromPixel(new OpenSeadragon.Point(x + w, y + h));

                const img1 = item.viewportToImageCoordinates(p1);
                const img2 = item.viewportToImageCoordinates(p2);

                const size = item.getContentSize();

                // Zwr√≥ƒá ROI w znormalizowanych wsp√≥≈Çrzƒôdnych obrazu (0-1)
                return {
                    x: img1.x / size.x,
                    y: img1.y / size.y,
                    w: (img2.x - img1.x) / size.x,
                    h: (img2.y - img1.y) / size.y
                };
            } catch (err) {
                console.error('Error converting ROI coordinates:', err);
                return null;
            }
        }

        // ZOOM TO ROI
        function zoomToROI(roi) {
            if (!app.viewer || !app.viewer.world.getItemAt(0)) return;
            
            const item = app.viewer.world.getItemAt(0);
            const itemSize = item.getContentSize();
            
            const rect = new OpenSeadragon.Rect(
                roi.x * itemSize.x,
                roi.y * itemSize.y,
                roi.w * itemSize.x,
                roi.h * itemSize.y
            );
            
            const viewportRect = app.viewer.viewport.imageToViewportRectangle(rect);
            app.viewer.viewport.fitBounds(viewportRect, true);
        }

        // SETUP EVENTS
        function setupEvents() {
            document.getElementById('fileInput').addEventListener('change', (e) => {
                handleFiles(e.target.files);
            });

            const viewerContainer = document.getElementById('viewerContainer');
            if (viewerContainer) {
                viewerContainer.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    viewerContainer.classList.add('drag-over');
                });
                viewerContainer.addEventListener('dragleave', () => {
                    viewerContainer.classList.remove('drag-over');
                });
                viewerContainer.addEventListener('drop', (e) => {
                    e.preventDefault();
                    viewerContainer.classList.remove('drag-over');
                    if (e.dataTransfer.files.length) {
                        handleFiles(e.dataTransfer.files);
                    }
                });
            }

            document.addEventListener('keydown', (e) => {
                if (e.ctrlKey || e.metaKey) {
                    if (e.key === 'o') { e.preventDefault(); addImages(); }
                    if (e.key === 'r') { e.preventDefault(); toggleROI(); }
                    if (e.key === 's') { e.preventDefault(); exportData(); }
                    if (e.key === '0') { e.preventDefault(); zoomReset(); }
                    if (e.key === 'n') { e.preventDefault(); createNewRecord(); }
                }
            });
        }

