        // EXPORT
        function exportData() {
            if (app.records.length === 0) {
                notify('Brak danych do eksportu', 'error');
                return;
            }

            const csvHeader = ['ID', 'Typ', 'Data', 'Obraz', 'Dane JSON'];
            let csv = csvHeader.join(',') + '\n';
            
            app.records.forEach(r => {
                const name = r.data.child_first_name || r.data.groom_first_name || r.data.deceased_first_name || '?';
                csv += `${r.id},"${r.template}","${r.timestamp}","${r.imageName || ''}","${JSON.stringify(r.data).replace(/"/g, '""')}"\n`;
            });

            const csvBlob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const csvLink = document.createElement('a');
            csvLink.href = URL.createObjectURL(csvBlob);
            csvLink.download = `genealog-${new Date().toISOString().split('T')[0]}.csv`;
            csvLink.click();

            const jsonData = {
                version: '3.2',
                exportDate: new Date().toISOString(),
                totalRecords: app.records.length,
                records: app.records
            };

            const jsonBlob = new Blob([JSON.stringify(jsonData, null, 2)], { type: 'application/json' });
            const jsonLink = document.createElement('a');
            jsonLink.href = URL.createObjectURL(jsonBlob);
            jsonLink.download = `genealog-backup-${new Date().toISOString().split('T')[0]}.json`;
            jsonLink.click();

            notify('‚úÖ Wyeksportowano CSV + JSON', 'success');
        }

        // STORAGE
        function saveStorage() {
            localStorage.setItem('genealog_records', JSON.stringify(app.records));
        }

        function loadStorage() {
            const data = localStorage.getItem('genealog_records');
            if (data) {
                app.records = JSON.parse(data);
                renderRecordsSidebar();
                updateThumbs();
            }
        }

        // PANEL TOGGLE
        function togglePanel(type) {
            if (type === 'right') {
                document.getElementById('rightPanel').classList.toggle('collapsed');
            } else if (type === 'thumbs') {
                document.getElementById('thumbsBar').classList.toggle('collapsed');
            }
        }

        // NOTIFY
        function notify(msg, type = 'info') {
            const n = document.createElement('div');
            n.className = `notification ${type}`;
            n.textContent = msg;
            document.body.appendChild(n);
            setTimeout(() => n.remove(), 2500);
        }
    </script>
</body>
</html>
