<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Genealog Indexer v3.2 Professional</title>
    <script src="https://openseadragon.github.io/openseadragon/openseadragon.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background-color: #0a0a0a;
            color: #ddd;
            overflow: hidden;
        }

        #app {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        /* ======================== TOOLBAR ======================== */
        .toolbar {
            background: linear-gradient(180deg, #1a1a1a 0%, #151515 100%);
            border-bottom: 1px solid #2a2a2a;
            padding: 6px 10px;
            display: flex;
            align-items: center;
            gap: 6px;
            min-height: 38px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.3);
            z-index: 100;
            flex-wrap: wrap;
        }

        .toolbar-title {
            font-size: 11px;
            color: #0078d4;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-right: auto;
        }

        .toolbar-search {
            background: #0f0f0f;
            border: 1px solid #3a3a3a;
            color: #bbb;
            padding: 5px 10px;
            border-radius: 4px;
            width: 150px;
            font-size: 11px;
            transition: all 0.15s ease;
        }

        .toolbar-search:focus {
            border-color: #0078d4;
            outline: none;
            background: #1a1a1a;
            box-shadow: 0 0 0 3px rgba(0,120,212,0.1);
        }

        .toolbar-btn {
            background: #252525;
            border: 1px solid #3a3a3a;
            color: #bbb;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 11px;
            display: flex;
            align-items: center;
            gap: 5px;
            transition: all 0.15s ease;
            white-space: nowrap;
        }

        .toolbar-btn:hover {
            background: #2d2d2d;
            border-color: #0078d4;
            color: #0078d4;
            transform: translateY(-1px);
        }

        .toolbar-btn.active {
            background: #0078d4;
            border-color: #0078d4;
            color: white;
            box-shadow: 0 0 12px rgba(0,120,212,0.4);
        }

        .toolbar-sep {
            width: 1px;
            height: 20px;
            background: #2a2a2a;
            margin: 0 2px;
        }

        /* ======================== MAIN LAYOUT ======================== */
        .main-content {
            flex: 1;
            display: flex;
            gap: 0;
            overflow: hidden;
            position: relative;
        }

        /* VIEWER PANEL */
        .viewer-panel {
            flex: 1;
            background: #000;
            position: relative;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .viewer-container {
            flex: 1;
            position: relative;
            overflow: hidden;
        }

        #viewer {
            width: 100%;
            height: 100%;
            cursor: grab;
        }

        #viewer.grabbing {
            cursor: grabbing;
        }

        .viewer-container.drag-over {
            border: 4px dashed #0078d4 !important;
            background-color: rgba(0, 120, 212, 0.05) !important;
        }

        /* ROI CANVAS */
        .roi-canvas {
            position: absolute;
            top: 0;
            left: 0;
            pointer-events: none;  /* Domy≈õlnie canvas nie przejmuje klikniƒôƒá */
            z-index: 50;
        }

        .roi-canvas.active {
            pointer-events: auto;  /* Zawsze musi przyjmowaƒá eventy gdy ROI mode aktywny */
            cursor: crosshair;
        }

        .roi-info-overlay {
            position: absolute;
            bottom: 10px;
            left: 10px;
            background: rgba(0,0,0,0.85);
            color: #0078d4;
            padding: 8px 12px;
            border-radius: 4px;
            font-size: 11px;
            z-index: 60;
            display: none;
            border: 1px solid #0078d4;
        }

        .roi-info-overlay.visible {
            display: block;
        }

        /* ROI INDICATOR */
        .form-group input.has-roi,
        .form-group textarea.has-roi {
            border-left: 4px solid #10b981;
            box-shadow: 0 0 8px rgba(16,185,129,0.3);
        }

        /* RIGHT PANEL */
        .right-panel {
            width: 340px;
            background: linear-gradient(180deg, #1a1a1a 0%, #151515 100%);
            border-left: 1px solid #2a2a2a;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            transition: width 0.3s ease;
            box-shadow: -4px 0 16px rgba(0,0,0,0.3);
        }

        .right-panel.collapsed {
            width: 0;
            border: none;
        }

        .panel-content {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        /* RECORDS SIDEBAR */
        .records-sidebar {
            width: 50px;
            background: #151515;
            border-right: 1px solid #2a2a2a;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 10px 0;
            gap: 8px;
        }

        .record-pill {
            width: 36px;
            height: 36px;
            border-radius: 18px;
            background: #252525;
            border: 2px solid #3a3a3a;
            color: #bbb;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            position: relative;
        }

        .record-pill:hover {
            border-color: #0078d4;
            transform: scale(1.1);
        }

        .record-pill.active {
            background: #0078d4;
            border-color: #0078d4;
            color: white;
            box-shadow: 0 0 12px rgba(0,120,212,0.6);
        }

        .record-pill.new {
            background: transparent;
            border: 2px dashed #3a3a3a;
            color: #666;
            font-size: 20px;
        }

        .record-pill.new:hover {
            border-color: #107c10;
            color: #107c10;
        }

        /* TEMPLATES */
        .templates-section {
            padding: 12px;
            border-bottom: 1px solid #2a2a2a;
        }

        .section-title {
            font-size: 10px;
            color: #888;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 10px;
        }

        .template-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 6px;
        }

        .template-btn {
            background: #252525;
            border: 1px solid #3a3a3a;
            color: #bbb;
            padding: 12px 4px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 10px;
            text-align: center;
            transition: all 0.15s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 6px;
        }

        .template-btn i {
            font-size: 16px;
        }

        .template-btn:hover {
            background: #2d2d2d;
            border-color: #0078d4;
            transform: translateY(-2px);
        }

        .template-btn.active {
            background: #0078d4;
            border-color: #0078d4;
            color: white;
            box-shadow: 0 0 12px rgba(0,120,212,0.4);
        }

        /* FORM */
        .form-section {
            padding: 12px;
            border-bottom: 1px solid #2a2a2a;
            display: none;
            flex: 1;
            overflow-y: auto;
        }

        .form-section.active {
            display: block;
        }

        .form-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .form-header h3 {
            font-size: 13px;
            color: #ddd;
            font-weight: 600;
        }

        .record-counter {
            font-size: 10px;
            color: #888;
            background: #252525;
            padding: 3px 8px;
            border-radius: 10px;
        }

        .form-group {
            margin-bottom: 12px;
        }

        .form-group label {
            display: block;
            font-size: 10px;
            color: #888;
            margin-bottom: 5px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.3px;
        }

        .form-group.required label::after {
            content: " *";
            color: #c42b1c;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 8px 10px;
            background: #0f0f0f;
            border: 1px solid #3a3a3a;
            color: #ddd;
            border-radius: 4px;
            font-size: 12px;
            font-family: inherit;
            transition: all 0.15s ease;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            border-color: #0078d4;
            outline: none;
            background: #1a1a1a;
            box-shadow: 0 0 0 3px rgba(0,120,212,0.1);
        }

        .form-group input.has-roi {
            border-left: 3px solid #107c10;
        }

        .form-group textarea {
            resize: vertical;
            min-height: 60px;
            font-family: 'Courier New', monospace;
        }

        .form-actions {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 6px;
            margin-top: 12px;
        }

        .form-btn {
            background: #107c10;
            border: none;
            color: white;
            padding: 10px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 11px;
            font-weight: 600;
            transition: all 0.15s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
        }

        .form-btn:hover {
            background: #0d6a0d;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(16,124,16,0.3);
        }

        .form-btn.danger {
            background: #c42b1c;
        }

        .form-btn.danger:hover {
            background: #a02318;
            box-shadow: 0 4px 12px rgba(196,43,28,0.3);
        }

        /* THUMBNAILS BAR - BOTTOM */
        .thumbnails-bar {
            height: 100px;
            background: #0f0f0f;
            border-top: 1px solid #2a2a2a;
            display: flex;
            align-items: center;
            padding: 8px;
            gap: 8px;
            overflow-x: auto;
            overflow-y: hidden;
            transition: height 0.3s ease;
            box-shadow: 0 -2px 8px rgba(0,0,0,0.3);
        }

        .thumbnails-bar.collapsed {
            height: 0;
            padding: 0;
            border: none;
            box-shadow: none;
            overflow: hidden;
        }

        .thumbnail {
            width: 84px;
            height: 84px;
            border: 2px solid #333;
            border-radius: 4px;
            cursor: pointer;
            overflow: hidden;
            background: #1a1a1a;
            flex-shrink: 0;
            transition: all 0.2s ease;
            position: relative;
        }

        .thumbnail img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .thumbnail:hover {
            border-color: #0078d4;
            transform: scale(1.05);
        }

        .thumbnail.active {
            border-color: #0078d4;
            box-shadow: 0 0 16px rgba(0,120,212,0.6);
        }

        .thumbnail-number {
            position: absolute;
            top: 2px;
            left: 2px;
            background: rgba(0,0,0,0.7);
            color: #fff;
            font-size: 10px;
            padding: 2px 5px;
            border-radius: 2px;
            font-weight: 600;
        }

        .thumbnail-count {
            position: absolute;
            bottom: 2px;
            right: 2px;
            background: rgba(0,120,212,0.8);
            color: white;
            font-size: 9px;
            padding: 1px 4px;
            border-radius: 2px;
            font-weight: 600;
        }

        /* NOTIFICATION */
        .notification {
            position: fixed;
            bottom: 24px;
            right: 24px;
            padding: 12px 20px;
            background: #0078d4;
            color: white;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 500;
            z-index: 1000;
            animation: slideIn 0.3s ease;
            box-shadow: 0 4px 20px rgba(0,0,0,0.4);
        }

        .notification.error {
            background: #c42b1c;
        }

        .notification.success {
            background: #107c10;
        }

        @keyframes slideIn {
            from {
                transform: translateX(400px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        /* SCROLLBAR */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #0f0f0f;
        }

        ::-webkit-scrollbar-thumb {
            background: #3a3a3a;
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #4a4a4a;
        }

        /* RESPONSIVE */
        @media (max-width: 1024px) {
            .right-panel {
                width: 300px;
            }
        }

        @media (max-width: 768px) {
            .main-content {
                flex-direction: column;
            }

            .right-panel {
                width: 100%;
                max-height: 250px;
                border-left: none;
                border-top: 1px solid #2a2a2a;
            }

            .thumbnails-bar {
                height: 80px;
            }

            .template-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }
    </style>
</head>
<body>
    <div id="app">
        <!-- TOOLBAR -->
        <div class="toolbar">
            <span class="toolbar-title">üìö Genealog Indexer v3.2</span>
            
            <button class="toolbar-btn" onclick="addImages()" title="Dodaj obrazy (Ctrl+O)">
                <i class="fas fa-folder-open"></i> Dodaj
            </button>

            <div class="toolbar-sep"></div>

            <input type="text" class="toolbar-search" id="searchInput" placeholder="üîç Szukaj..." title="Szukaj w rekordach">
            
            <div class="toolbar-sep"></div>

            <button class="toolbar-btn" id="roiBtn" onclick="toggleROI()" title="Zaznaczanie ROI (Ctrl+R)">
                <i class="fas fa-crop"></i> ROI
            </button>

            <button class="toolbar-btn" onclick="rotateImage(90)" title="Obr√≥t +90¬∞">
                <i class="fas fa-undo"></i>
            </button>

            <button class="toolbar-btn" onclick="rotateImage(-90)" title="Obr√≥t -90¬∞">
                <i class="fas fa-redo"></i>
            </button>

            <div class="toolbar-sep"></div>

            <button class="toolbar-btn" onclick="zoomReset()" title="Reset zoom (Ctrl+0)">
                <i class="fas fa-expand"></i> Reset
            </button>

            <button class="toolbar-btn" onclick="toggleFullscreen()" title="Pe≈Çny ekran">
                <i class="fas fa-window-maximize"></i> Fullscreen
            </button>

            <div class="toolbar-sep"></div>

            <button class="toolbar-btn" onclick="togglePanel('right')" title="Poka≈º/ukryj formularz">
                <i class="fas fa-list"></i> Formularz
            </button>

            <button class="toolbar-btn" onclick="togglePanel('thumbs')" title="Poka≈º/ukryj miniatury">
                <i class="fas fa-images"></i> Miniatury
            </button>

            <button class="toolbar-btn" onclick="exportData()" title="Eksportuj CSV + JSON">
                <i class="fas fa-download"></i> Eksport
            </button>
        </div>

        <!-- MAIN CONTENT -->
        <div class="main-content">
            <!-- RECORDS SIDEBAR -->
            <div class="records-sidebar" id="recordsSidebar"></div>
            
            <!-- VIEWER -->
            <div class="viewer-panel">
                <div class="viewer-container" id="viewerContainer">
                    <div id="viewer"></div>
                    <canvas class="roi-canvas" id="roiCanvas"></canvas>
                    <div class="roi-info-overlay" id="roiInfo">Tryb ROI aktywny: Zaznacz obszar na obrazie</div>
                </div>
            </div>

            <!-- RIGHT PANEL -->
            <div class="right-panel" id="rightPanel">
                <div class="panel-content">
                    <!-- TEMPLATES -->
                    <div class="templates-section">
                        <div class="section-title">Typ Aktu</div>
                        <div class="template-grid" id="templateGrid"></div>
                    </div>

                    <!-- FORM SECTIONS -->
                    <div id="formsContainer"></div>
                </div>
            </div>
        </div>

        <!-- THUMBNAILS BAR -->
        <div class="thumbnails-bar" id="thumbsBar"></div>
    </div>

    <input type="file" id="fileInput" multiple accept="image/*" style="display: none;" title="Wybierz obrazy do zaindeksowania">

    <script>
        const app = {
            images: [],
            records: [],
            currentImageIdx: 0,
            currentRecordId: null,
            currentTemplate: null,
            templates: [],
            viewer: null,
            roiMode: false,
            roiCanvas: null,
            roiCtx: null,
            activeField: null,
            drawingROI: false,
            roiStartX: 0,
            roiStartY: 0
        };

        // INITIALIZATION
        document.addEventListener('DOMContentLoaded', async () => {
            loadFallbackTemplates();
            initViewer();
            setupROI();
            setupEvents();
            renderRecordsSidebar();
            loadStorage();
            notify('System gotowy', 'success');
        });

        // FALLBACK TEMPLATES
        function loadFallbackTemplates() {
            app.templates = [
                {
                    id: "birth",
                    name: "Akt Urodzenia",
                    icon: "fa-baby",
                    fields: [
                        {id: "child_first_name", label: "Imiƒô dziecka", type: "text", required: true},
                        {id: "child_last_name", label: "Nazwisko dziecka", type: "text", required: true},
                        {id: "birth_date", label: "Data urodzenia", type: "date", required: false},
                        {id: "birth_place", label: "Miejsce urodzenia", type: "text", required: false},
                        {id: "father_name", label: "Imiƒô ojca", type: "text", required: false},
                        {id: "mother_name", label: "Imiƒô matki", type: "text", required: false},
                        {id: "notes", label: "Uwagi", type: "textarea", required: false}
                    ]
                },
                {
                    id: "marriage",
                    name: "Akt Ma≈Ç≈ºe≈Ñstwa",
                    icon: "fa-ring",
                    fields: [
                        {id: "groom_first_name", label: "Imiƒô pana m≈Çodego", type: "text", required: true},
                        {id: "groom_last_name", label: "Nazwisko pana m≈Çodego", type: "text", required: true},
                        {id: "bride_first_name", label: "Imiƒô panny m≈Çodej", type: "text", required: true},
                        {id: "bride_last_name", label: "Nazwisko panny m≈Çodej", type: "text", required: true},
                        {id: "marriage_date", label: "Data ma≈Ç≈ºe≈Ñstwa", type: "date", required: false},
                        {id: "marriage_place", label: "Miejsce ma≈Ç≈ºe≈Ñstwa", type: "text", required: false},
                        {id: "notes", label: "Uwagi", type: "textarea", required: false}
                    ]
                },
                {
                    id: "death",
                    name: "Akt Zgonu",
                    icon: "fa-cross",
                    fields: [
                        {id: "deceased_first_name", label: "Imiƒô zmar≈Çego", type: "text", required: true},
                        {id: "deceased_last_name", label: "Nazwisko zmar≈Çego", type: "text", required: true},
                        {id: "death_date", label: "Data zgonu", type: "date", required: false},
                        {id: "death_place", label: "Miejsce zgonu", type: "text", required: false},
                        {id: "age", label: "Wiek (lata)", type: "number", required: false},
                        {id: "notes", label: "Uwagi", type: "textarea", required: false}
                    ]
                }
            ];
            
            app.currentTemplate = app.templates[0].id;
            renderTemplateButtons();
            renderFormSections();
        }

        // RENDER TEMPLATE BUTTONS
        function renderTemplateButtons() {
            const grid = document.getElementById('templateGrid');
            grid.innerHTML = '';

            app.templates.forEach((template, idx) => {
                const btn = document.createElement('button');
                btn.className = `template-btn ${idx === 0 ? 'active' : ''}`;
                btn.onclick = () => selectTemplate(template.id);
                btn.innerHTML = `<i class="fas ${template.icon}"></i><span>${template.name}</span>`;
                grid.appendChild(btn);
            });
        }

        // RENDER FORM SECTIONS
        function renderFormSections() {
            const container = document.getElementById('formsContainer');
            container.innerHTML = '';

            app.templates.forEach((template) => {
                const section = document.createElement('div');
                section.id = `form-${template.id}`;
                section.className = `form-section ${template.id === app.currentTemplate ? 'active' : ''}`;

                section.innerHTML = `
                    <div class="form-header">
                        <h3>${template.name}</h3>
                        <div class="record-counter" id="recordCounter">Rekord: #0</div>
                    </div>
                `;

                template.fields.forEach(field => {
                    const group = document.createElement('div');
                    group.className = `form-group ${field.required ? 'required' : ''}`;

                    const label = document.createElement('label');
                    label.textContent = field.label;

                    let input;
                    if (field.type === 'textarea') {
                        input = document.createElement('textarea');
                    } else {
                        input = document.createElement('input');
                        input.type = field.type;
                    }

                    input.className = 'field-input';
                    input.dataset.field = field.id;
                    input.dataset.templateId = template.id;
                    input.title = field.label;
                    input.placeholder = field.label;
                    if (field.required) {
                        input.required = true;
                    }

                    group.appendChild(label);
                    group.appendChild(input);
                    section.appendChild(group);
                });

                const actions = document.createElement('div');
                actions.className = 'form-actions';
                actions.innerHTML = `
                    <button class="form-btn" onclick="createNewRecord()">
                        <i class="fas fa-plus"></i> Nowy
                    </button>
                    <button class="form-btn" onclick="saveRecord()">
                        <i class="fas fa-save"></i> Zapisz
                    </button>
                    <button class="form-btn danger" onclick="deleteCurrentRecord()">
                        <i class="fas fa-trash"></i> Usu≈Ñ
                    </button>
                `;
                section.appendChild(actions);

                container.appendChild(section);
            });

            setupFormEvents();
        }

        // SETUP FORM EVENTS
        function setupFormEvents() {
            // U≈ºyj delegacji zdarze≈Ñ zamiast bezpo≈õrednich listener√≥w
            const formsContainer = document.getElementById('formsContainer');
            
            if (!formsContainer) {
                console.warn('Forms container not found');
                return;
            }

            // Usu≈Ñ stare listeners (je≈õli sƒÖ)
            formsContainer.removeEventListener('mouseenter', formMouseEnter, true);
            formsContainer.removeEventListener('mouseleave', formMouseLeave, true);
            formsContainer.removeEventListener('focus', formFocus, true);
            formsContainer.removeEventListener('blur', formBlur, true);
            formsContainer.removeEventListener('keydown', formKeyDown, true);

            // Mouseenter delegation
            function formMouseEnter(e) {
                if (!e.target.classList.contains('field-input')) return;
                const input = e.target;
                
                if (app.currentRecordId) {
                    const record = app.records.find(r => r.id === app.currentRecordId);
                    if (record && record.rois && record.rois[input.dataset.field]) {
                        redrawROIs(input.dataset.field);
                    }
                }
            }

            // Mouseleave delegation
            function formMouseLeave(e) {
                if (!e.target.classList.contains('field-input')) return;
                redrawROIs();
            }

            // Focus delegation
            function formFocus(e) {
                if (!e.target.classList.contains('field-input')) return;
                const input = e.target;
                
                app.activeField = input;
                console.log('üîµ Pole zaznaczone:', input.dataset.field);
                redrawROIs();

                if (app.currentRecordId) {
                    const record = app.records.find(r => r.id === app.currentRecordId);
                    if (record && record.rois && record.rois[input.dataset.field]) {
                        zoomToROI(record.rois[input.dataset.field]);
                    }
                }
            }

            // Blur delegation
            function formBlur(e) {
                if (!e.target.classList.contains('field-input')) return;
                
                // Nie usuwaj activeField je≈õli ROI mode jest w≈ÇƒÖczony
                // Dziƒôki temu mo≈ºna rysowaƒá bez utraty pola
                if (app.roiMode) {
                    console.log('üìå Blur ignored - ROI mode enabled, keeping activeField');
                    return;
                }
                
                if (app.activeField === e.target) {
                    app.activeField = null;
                    redrawROIs();
                }
            }

            // Keydown delegation
            function formKeyDown(e) {
                if (!e.target.classList.contains('field-input')) return;
                const input = e.target;
                
                if (e.key === 'Enter' && input.tagName !== 'TEXTAREA') {
                    e.preventDefault();
                    const form = document.querySelector(`#form-${app.currentTemplate}`);
                    const inputs = Array.from(form.querySelectorAll('.field-input'));
                    const idx = inputs.indexOf(input);
                    if (idx < inputs.length - 1) {
                        inputs[idx + 1].focus();
                    } else {
                        saveRecord();
                    }
                }
            }

            // Dodaj delegowane listenery
            formsContainer.addEventListener('mouseenter', formMouseEnter, true);
            formsContainer.addEventListener('mouseleave', formMouseLeave, true);
            formsContainer.addEventListener('focus', formFocus, true);
            formsContainer.addEventListener('blur', formBlur, true);
            formsContainer.addEventListener('keydown', formKeyDown, true);
            
            console.log('‚úÖ Form events delegated successfully');
        }

        // VIEWER INIT
        function initViewer() {
            app.viewer = OpenSeadragon({
                id: 'viewer',
                prefixUrl: 'https://openseadragon.github.io/openseadragon/images/',
                minZoomLevel: 0.5,
                maxZoomLevel: 20,
                visibilityRatio: 0.5,
                constrainDuringPan: true,
                showNavigator: true,
                navigatorPosition: 'BOTTOM_RIGHT',
                gestureSettingsMouse: {
                    scrollToZoom: true,
                    clickToZoom: false
                }
            });

            // Dodaj listenery do aktualizacji ROI przy zoom/pan/rotate
            app.viewer.addHandler('animation', () => {
                redrawROIs();
            });

            app.viewer.addHandler('resize', () => {
                const container = document.querySelector('.viewer-container');
                if (container && app.roiCanvas) {
                    app.roiCanvas.width = container.offsetWidth;
                    app.roiCanvas.height = container.offsetHeight;
